    <bridgehead renderas="sect3">clutter-gst Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required">
      <xref linkend="clutter"/> and
      <xref linkend="gst-plugins-base"/>
