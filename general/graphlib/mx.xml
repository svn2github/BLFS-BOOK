    <bridgehead renderas="sect3">mx Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required"><xref linkend="clutter"/>,
    <xref linkend="gdk-pixbuf"/>,
    <xref linkend="dbus"/>,
