    <bridgehead renderas="sect3">Kdevelop Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required"><xref linkend="kdebase"/></para>

    <bridgehead renderas="sect4">Recommended</bridgehead>
