        include/{cddb-slave2,gnome-media},
        lib/gnome-media,
        share/{gnome-{media,sound-recorder},
        gnome/help/{gnome-{cd, sound-recorder, volume-control},
        grecord, gstreamer-properties},
        gsteamer-properties,
        omf/gnome-media,
        pixmaps/gnome-{cd, media}}</seg>
