    <bridgehead renderas="sect3">devhelp Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required"><!-- intltool is implicit for gtk3 -->
    <xref linkend="gtk3"/>,
    <xref linkend="GConf"/>, and
    <xref linkend="webkitgtk"/></para>

