    <bridgehead renderas="sect3">GNOME Speech Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required"><xref linkend="libbonobo"/></para>

    <bridgehead renderas="sect4">Optional</bridgehead>
