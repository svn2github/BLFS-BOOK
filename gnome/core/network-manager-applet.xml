    <bridgehead renderas="sect3">network-manager-applet Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required"><xref linkend="dbus-glib"/>,
    <xref linkend="gtk3"/>,
