    <bridgehead renderas="sect3">gnome-packagekit Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required"><xref linkend="packagekit"/>,
    <xref linkend="gtk3"/>,
    <xref linkend="libnotify"/>,
    <xref linkend="gnome-menus"/>,
    <xref linkend="libcanberra"/>,
    <xref linkend="gnome-control-center"/>, and
    <xref linkend="upower"/></para>

