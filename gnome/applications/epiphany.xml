        </para>
      </listitem>
    </itemizedlist>

    <bridgehead renderas="sect3">Epiphany Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required">
      <xref linkend="avahi"/>,
      <xref linkend="gcr"/>,
      <xref linkend="gnome-desktop"/>,
      <xref linkend="libnotify"/>,
      <xref linkend="libwnck"/> and
